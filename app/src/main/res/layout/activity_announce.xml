<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_overlay_gradient"
    android:padding="16dp"
    tools:context=".announce">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back1"
            app:tint="#FFFFFF"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/clearanceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Announcement"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/announcementTitle"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/headerContainer"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_bg"
        android:layout_centerHorizontal="true"
        android:textColorHint="#CFC9F5"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />


    <TextView
        android:id="@+id/messageTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:layout_below="@id/announcementTitle"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/announcementMessage"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:hint="Enter your announcement message"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_bg"
        android:layout_centerHorizontal="true"
        android:textColorHint="#CFC9F5"
        android:padding="12dp"
        android:layout_below="@+id/messageTittle"
        android:layout_marginBottom="24dp"
        android:gravity="top|start" />

    <Button
        android:id="@+id/btnSubmitAnnouncement"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Submit Announcement"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button_style"
        android:layout_below="@id/announcementMessage"
        android:layout_marginBottom="24dp" />

</RelativeLayout>
