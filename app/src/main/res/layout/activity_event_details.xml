<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event_details"
    android:background="@drawable/purple_overlay_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/eventDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/container_rounded_dark"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:elevation="8dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back1"
                app:tint="#FFFFFF"
                android:layout_marginEnd="12dp"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Event Poster -->
        <ImageView
            android:id="@+id/eventPoster"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/add_photo"
            android:layout_marginBottom="16dp"
            android:contentDescription="Event Poster" />

        <!-- Event Title -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading Title..."
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Date & Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/calendar"
                app:tint="#CFC9F5"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/eventDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Date &amp; Time..."
                android:textColor="#CFC9F5"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Venue -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                app:tint="#CFC9F5"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/eventVenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading Venue..."
                android:textColor="#CFC9F5"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading description..."
            android:textColor="#DDDDDD"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Notes"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/eventNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading notes..."
            android:textColor="#B3A9D6"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Contact Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Contact"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/eventContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading contact..."
            android:textColor="#CFC9F5"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join This Event"
            android:textStyle="bold"
            android:textColor="#1E1B32"
            android:backgroundTint="#C8A2FF"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="6dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
