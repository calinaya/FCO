<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_overlay_gradient"
        android:padding="24dp"
        tools:context=".profile"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/username"
                android:background="@drawable/profile_circle_background"
                android:scaleType="centerCrop"
                android:layout_marginTop="20dp" />


            <TextView
                android:id="@+id/section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#E0AAFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />


            <EditText
                android:id="@+id/edit_student_id"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Student ID"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/section_title"
                android:layout_marginTop="24dp"
                android:padding="14dp"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_full_name"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/edit_student_id"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/edit_full_name"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/edit_email"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:inputType="textPassword"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_course"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Course"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/edit_password"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_year"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Year Level"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#999999"
                android:background="@drawable/edit_text_bg"
                android:layout_below="@id/edit_course"
                android:layout_marginTop="16dp"
                android:padding="14dp"
                android:inputType="text"
                android:textSize="16sp" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾ Save Changes"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/edit_year"
                android:layout_marginTop="20dp"
                android:elevation="6dp"
                android:background="@drawable/button_neon"
                android:padding="14dp" />

            <Button
                android:id="@+id/logout_button"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_centerHorizontal="true"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_below="@id/save_button"
                android:layout_marginTop="16dp"
                android:elevation="6dp"
                android:background="@drawable/button_neon"
                android:padding="14dp" />

        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/botnav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/attendance"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/attendance"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />


        <ImageView
            android:id="@+id/notif"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notification"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/message"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            app:tint="#FFFFFF" />
    </LinearLayout>

</FrameLayout>
