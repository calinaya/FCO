<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_overlay_gradient"
    android:padding="20dp"
    tools:context=".fcoProfile">


    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background">

        <TextView
            android:id="@+id/clearanceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Officer Profile"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerContainer"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@drawable/notification_card"
        android:padding="24dp"
        android:elevation="10dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:background="@drawable/profile_circle"
            android:scaleType="centerCrop"
            android:padding="4dp" />

        <EditText
            android:id="@+id/editOfficerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Officer Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#AFA8E5"
            android:backgroundTint="#B3A9FF"
            android:layout_marginTop="16dp"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editOfficerEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="officer@email.com"
            android:textColor="#FFFFFF"
            android:textColorHint="#AFA8E5"
            android:backgroundTint="#B3A9FF"
            android:layout_marginTop="12dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editOfficerID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Officer ID"
            android:textColor="#FFFFFF"
            android:textColorHint="#AFA8E5"
            android:backgroundTint="#B3A9FF"
            android:layout_marginTop="12dp"
            android:inputType="text"
            android:textSize="16sp"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileCard"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="90dp"
        android:weightSum="2">

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4CAF50"
            android:background="@drawable/rounded_button_style"
            android:padding="12dp"/>

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF3B3B"
            android:background="@drawable/rounded_button_style"
            android:padding="12dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/qrScanner"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/qr_code"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/message"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/notificationBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notification"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            app:tint="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
