<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_overlay_gradient"
    tools:context=".notification">

    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”” Notifications"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_centerHorizontal="true"/>


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/notificationTitle"
        android:layout_marginTop="12dp"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/notificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/notification_card"
                android:padding="18dp"
                android:layout_marginBottom="20dp"
                android:elevation="6dp">

                <TextView
                    android:id="@+id/placeholderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¢ No notifications yet"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/placeholderDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You're all caught up!"
                    android:textColor="#CFC9F5"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/botnav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_bg"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
        android:clipToPadding="false"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/attendance"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/attendance"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />


        <ImageView
            android:id="@+id/notif"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notification"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/message"
            app:tint="#FFFFFF"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            app:tint="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>
